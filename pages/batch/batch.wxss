/***************table start*********************/
.td_a{
}
.checked_icon {
    position:absolute;
    width:20px;
    height:20px;
    bottom:0;
    right:0;
}
.td {
  position: relative;
  border-bottom:1px solid #ccc;
  display: flex;
  justify-content: center;
  align-items:center;
}
.year_month {
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.table{
  width:100%;
height:100%;
display:flex;
flex-direction:column;
border-collapse:collapse;
border-spacing:0;
color:#2b2b2b;
position:relative;
}
.week_line{
  justify-content: space-around;
  width:100%;
  height:45rpx;
  line-height:45rpx;
  text-align:center;
  font-size:12px;
  background: #eee;
  color:#000;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
}
.date_tr {
  display: grid;
  grid-template-columns:1fr 1fr 1fr 1fr 1fr 1fr 1fr;
  text-align: center;
  color:#2b2b2b;
  height: 40px;
}
.td {
  border-right: 1px solid #ccc;
}
/***************table end*********************/