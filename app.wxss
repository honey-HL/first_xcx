/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: Verdana,Geneva,sans-serif;
} 

/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.no_schedule {
  padding:10px;
  display:flex;
  justify-content:center;
  flex-direction:column;
  align-items:center;
}
.no_schedule_img {
  width:80px;
  height: 80px;
}