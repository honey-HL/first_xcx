/* pages/milestone/milestone.wxss */
.milestone {
  background-color: #ddd;
  overflow: hidden;
}
.mile_form {
  height: calc(100% - 94px);
  background-color: #fff;
  border-top-left-radius: 40px;
  border-top-right-radius: 40px;
  overflow-y: auto;
}
.mile_form_wrapper {
  padding: 8px 14px;
}
.wrapper_input {
  padding: 6px;
  border: 1px solid #000;
  border-radius: 43px;
  margin-left: 10px;
  width: 70%;
}
.input-inner {
  color: #828282;
}
.title_box {
  display: flex;
  align-items: center;
  margin-top: 10px;
}
.milestone_box {
  display: flex;
  justify-content: space-between;
  border:1px solid #fff;
  margin: 10px;
  padding: 10px;
  border-radius: 8px;
  color: #fff;
  background: -webkit-gradient(linear,100% 0%,0 100%,from(rgb(130 193 190)),to(rgb(245 170 170)));
}
.mile_title {
  font-size: 18px;
  font-weight: bold;
}
.mile_days {
  font-size: 22px;
  font-weight: bold;
}
.has_pass, .start_date {
  font-size: 14px;
}