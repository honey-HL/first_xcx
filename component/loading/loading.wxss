/* component/loading.wxss */

.wrapper {
  position: relative;
}
.text {
  font-size: 12px;
  color: #888;
}
.loading {
  width: 100%;
  height: 100%;
  justify-content: center;
  text-align: center;
}
 
.loading .dot{
  background-color: #6ebbf1;
  display: inline-block;
  /**圆点大小在这里设置，高宽一致，圆角值为高宽的一半**/
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  margin: 0 10rpx;
  opacity: 0;
}