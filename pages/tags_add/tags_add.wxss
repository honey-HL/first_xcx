/* pages/tags_add/tags_add.wxss */
.tag {
  /* width: 60px; */
  height: 36px;
  padding: 0px 10px;
  line-height: 30px;
  color: #000;
  border-radius: 20px;
  background-color: pink;
  width: 152px;
}
.all-tags {
  display: flex;
  border:1px solid #000;
  padding: 5px;
  border-radius: 10px;
  flex-wrap: wrap;
  margin-bottom: 10px;
}
.tag_item {
  color: #000;
  height: 20px;
  line-height: 20px;
  padding: 4px 8px;
  margin-right: 8px;
  border-radius: 16px;
  font-size: 14px;
  margin-top: 3px;
  margin-bottom: 8px;
  display: flex;
  align-items: center;
}
.has-tags {
  margin-top: 5px;
}
.del-btn {
  width: 16px;
  height: 16px;
  margin-left: 3px;
}
.del-img {
  width: 100%;
  height: 100%;
}
.baseNum {
  height: 36px;
  padding: 0px 10px;
  line-height: 30px;
  color: #000;
  border-radius: 20px;
  border: 1px solid #000;
  width: 150px;
  /* background-color: pink; */
}
.container-tag {
  padding: 0px 15px;
}
.color-box {
  display: flex;
  flex-wrap: wrap;
}
.color-item {
  width: 80rpx;
  height:80rpx;
  border-radius: 50%;
  margin-right: 10px;
  margin-bottom: 10px;
}
.color-span {
  width: 100%;
  height: 100%;
  display: inline-block;
  margin-right: 8px;
  border-radius: 50%
}
.bottom_save {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 50px;
}
.btn_save {
  padding:10px 60px;
  background:#29e;
  color:#fff;
  border-radius:4px;
}
.last_btn {
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 100px;
  width: 100%;
}
.daka_title {
  margin-top: 10px;
}
.last_btn_save {
  padding:10px 60px;
  background:#29e;
  color:#fff;
  border-radius:25px;
}
.daka_group {
  margin-top:10px;
  margin-bottom: 30px;
}