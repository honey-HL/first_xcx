  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.tag_item {
  color: #000;
  height: 20px;
  line-height: 20px;
  padding: 4px 8px;
  margin-right: 8px;
  border-radius: 16px;
  font-size: 14px;
  margin-top: 5px;
  position: relative;
}
.userAvatarUrl .avatar {
  width:100%;
